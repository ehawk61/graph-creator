<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmeek.graphcreator">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/graph_creator_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.jmeek.graphcreator.InputChoiceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name ="com.jmeek.graphcreator.WebViewActivity"
            android:label="WebViewActivity">
        </activity>
        <activity
            android:name="com.jmeek.graphcreator.GraphCreatorActivity"
            android:label="GraphCreator - Web URL">
        </activity>
		<activity
			android:name="com.jmeek.graphcreator.LocalFileActivity"
			android:label="GraphCreator - Local File">
		</activity>
    </application>

</manifest>
